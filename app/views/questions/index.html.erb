<div >
		<%= flash[:alert] %>
		<p id="notice"><%= notice %></p>

<h2 class="header">Welcome to the forum!</h2>
<div class=header>Before asking new Questions, please have a look at the following question!<br />
Or, you can always ask a new one! <%= link_to 'New Question', new_question_path %></div>
<hr />

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Body</th> -->
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%#= question.body %></td>
        
				<td class="forumo"><%= link_to 'View', question,class: "btn btn-primary" %>
				<% if can? :update, question%>
						<%= link_to 'Edit', edit_question_path(question),class: "btn btn-primary" %>
				<% end %>
				<% if can? :destroy, question%>
						<%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
            
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
