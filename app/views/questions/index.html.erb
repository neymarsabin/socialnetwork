<div style="padding-left: 15px">
		<%= flash[:alert] %>
		<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Body</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%#= question.body %></td>
				<td><%= link_to 'Show', question,class: "btn btn-primary" %></td>
				<% if can? :update, question%>
						<td><%= link_to 'Edit', edit_question_path(question),class: "btn btn-primary" %></td>
				<% end %>
				<% if can? :destroy, question%>
						<td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
</div>
