<div class="displayq">
<strong>Title:</strong><%= @question.title %> <br/>
<strong>Description:</strong><%= @question.body %> <br/>
<strong>Posted by:</strong><%= @question.user.email %>
<hr />
<h4><%= @question.answers.count %> Answers <%= render @question.answers %> | Reply to thread </h4><%= render "answers/form" %>
<br/>

<% if can? :update , @question%>
		<%= link_to 'Edit', edit_question_path(@question), class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', questions_path, class: "btn btn-danger" %>
</div>