<div class="well">
 		<ul>
				<% @posts.each do |post| %>
						<li>Title: <%= post.title %> <br/> </li>
						<li>Body: <%= post.body.truncate(20).html_safe %></li>
						<li>User Email: <%= post.email %> <br/></li>
						<%= link_to "read",post,class: "btn btn-warning"%>
						<br/>
						<br/>
		</ul>
				<% end %>
</div>

