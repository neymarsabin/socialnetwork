<% @posts.each do |post| %>
		<%= post.title %><br/> 
		Body: <%= post.body.truncate(20).html_safe %>
		User Email: <%= post.email %> <br/>
		Tags: <%= post.tag_list.join(',') %> <small> number of tags: <%= post.tag_list.size %> </small> <br/>
		<%= link_to "read",post,class: "btn btn-success"%><br>
		<br>
<% end %>

