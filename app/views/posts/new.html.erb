
<h1 class="new-post-header">create post</h1>

<div class="container create-post">
		<%= form_for @post do |f|  %>
				<div class="form-group row">
						<label for="example-text-input" class="col-2 col-form-label">Title</label>
						<div class="col-10">
								<%= f.text_field :title, class: "form-control" %>
						</div>
				</div>
				<div class="form-group row">
						<label for="example-color-input" class="col-2 col-form-label">Body</label>
						<div class="col-10">
								<%= f.text_area :body, class: "form-control", id: "wysiwyg" %>
						</div>
				</div>
				<div class="form-group row">
						<label for="example-text-input" class="col-2 col-form-label">Tags</label>
						<div class="col-10">
								<%= f.text_field :tag_list, class: "form-control",placeholder: "Tags(separated by commas)" %>
						</div>
				</div>
				<div class="form-group row">
						<label for="example-captcha-input" class="col-2 col-form-label">Enter The Captcha</label>
						<div class="col-10">
								<%= recaptcha_tags %>
						</div>
				</div>
				<%= f.submit "Create Post", class: "btn btn-success"%>
		<% end %>
</div>


<script>
 $('#wysiwyg').froalaEditor({
     inlineMode: false,
     heightMin: '200px',
     /* toolbarButtons: ['bold', 'italic', 'underline'],*/
		 /* imageUploadURL: '/'*/
 })
</script>
