<br><br><br>
<div class="container">
<div class="row">
		<div class="col-sm-3">	</div>	
				<div class="col-sm-6" >
				<center><h3>Forgot your password?</h3></center><hr />
				<div class="form-group">


						<div class="form">
								<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
										<%= devise_error_messages! %>


										<div class="field">
												<%= f.label :email %><br />
												<%= f.email_field :email, autofocus: true,class: "form-control" %>
										</div>
										<br/>
										<i>If your email address is found in database, you will receive the password reset email in couple of minutes.</i><br>
										<div class="actions">
												<%= f.submit "Send me reset password instructions", class: "btn btn-danger" %>
										</div>
								<% end %>
						</div>

</div></div></div>
<%= render "devise/shared/links" %>
</div>
